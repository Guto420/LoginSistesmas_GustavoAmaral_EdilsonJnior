<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gustavosouza.loginsistema_edilson_gustavo.MainActivity"
    android:background="@android:color/background_light">

    <TextView
        android:text="Registro Incorreto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registralegal"
        android:visibility="invisible"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/register"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="80dp"
        android:id="@+id/login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/darker_gray"
        android:textColorLink="?attr/actionMenuTextColor"
        android:layout_alignRight="@+id/consenha"
        android:layout_alignEnd="@+id/consenha" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textColorLink="?attr/actionMenuTextColor"
        android:id="@+id/logintext" />

    <TextView
        android:text="Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText5"
        android:background="@android:color/darker_gray"
        android:textColorLink="@android:color/background_dark"
        android:layout_below="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <Button
        android:text="Registrar-se"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Registrar-se"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <TextView
        android:text="Confimar senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmarsenha"
        android:layout_marginTop="26dp"
        android:visibility="invisible"
        android:layout_below="@+id/editText5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/consenha"
        android:background="@android:color/darker_gray"
        android:textColorLink="@android:color/background_dark"
        android:layout_marginTop="23dp"
        android:visibility="invisible"
        android:layout_below="@+id/confirmarsenha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Fazer Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_above="@+id/Mensagem"
        android:layout_marginBottom="12dp"
        android:layout_toRightOf="@+id/confirmarsenha"
        android:layout_toEndOf="@+id/confirmarsenha"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <TextView
        android:text="Senha incorreta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Mensagem"
        android:visibility="invisible"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/register"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
